<idea-plugin>
  <id>com.everspring.plugin.swagger-tool</id>
  <name>swagger-annotation-tool</name>
  <version>1.1</version>
  <vendor email="xuechangchun007@126.com" url="https://github.com/EverSpring">changchun</vendor>

  <description>springfox-swagger tool,注解转注释，当前只支持model里的</description>

  <change-notes><![CDATA[
      v1.0.1 In the model,transform comment(/** xx */) to springfox-swagger @ApiModelProperty<br>
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0" until-build="202.7660.26"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="plugin.rightClick" class="com.everspring.action.RightClickTransformAction" text="swagger tool"
            description="右键转换成@ApiModelProperty">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>